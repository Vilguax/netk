# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/netk

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# ENCRYPTION (for EVE tokens at rest)
# ===========================================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# ===========================================
# AUTH (NextAuth.js v5)
# ===========================================
# Generate with: openssl rand -base64 32
AUTH_SECRET=
AUTH_URL=http://localhost:3000
# Production only: enable cross-subdomain auth
# AUTH_COOKIE_DOMAIN=.netk.app

# ===========================================
# EVE ONLINE SSO
# ===========================================
# Register at https://developers.eveonline.com/
# Callback URL: http://localhost:3000/api/auth/callback/eveonline
EVE_CLIENT_ID=
EVE_CLIENT_SECRET=

# ===========================================
# OAUTH PROVIDERS (optional)
# ===========================================
# Google: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Discord: https://discord.com/developers/applications
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# ===========================================
# EMAIL (optional, for verification & password reset)
# ===========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@netk.app

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Janice: https://janice.e-351.com/
JANICE_API_KEY=

# ===========================================
# MODULE URLs (for client-side navigation)
# ===========================================
NEXT_PUBLIC_GATEWAY_URL=http://localhost:3000
NEXT_PUBLIC_FLIPPER_URL=http://localhost:3001
NEXT_PUBLIC_RATTING_URL=http://localhost:3002
NEXT_PUBLIC_ROCK_RADAR_URL=http://localhost:3003
